<Window x:Class="GestionaContactos.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Contactos" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Brush.Background}">

    <Grid>
        <!-- Encabezado -->
        <Grid Background="{StaticResource Brush.Primary}" Height="72" VerticalAlignment="Top">
            <TextBlock Text="Gestor de Contactos"
                 Foreground="{StaticResource Brush.PrimaryText}"
                 FontSize="{StaticResource FontSize.Title}"
                 FontWeight="SemiBold"
                 VerticalAlignment="Center"
                 Margin="24,0,0,0" />
        </Grid>

        <!-- Contenido -->
        <Border Margin="0,72,0,0" Padding="24"
            Background="{StaticResource Brush.Background}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filtros -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBox x:Name="FiltroNombre" Width="200" />
                    <TextBox x:Name="FiltroRut" Width="150" />
                    <Button Content="Buscar" Style="{StaticResource ButtonPrimary}" Click="Buscar_Click"/>
                </StackPanel>

                <!-- Tabla de datos -->
                <DataGrid Grid.Row="2" x:Name="GridContactos"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="RUT" Binding="{Binding Rut}" Width="120"/>
                        <DataGridTextColumn Header="Nombres" Binding="{Binding Nombres}" Width="180"/>
                        <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="180"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220"/>
                        <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="140"/>
                        <DataGridTextColumn Header="Ciudad" Binding="{Binding Direccion.Ciudad}" Width="140"/>
                        <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Botones CRUD -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Crear" Click="Crear_Click" Style="{StaticResource ButtonPrimary}" Margin="0,0,12,0"/>
                    <Button Content="Actualizar" Click="Actualizar_Click" Style="{StaticResource ButtonSecondary}" Margin="0,0,12,0"/>
                    <Button Content="Eliminar" Click="Eliminar_Click" Style="{StaticResource ButtonSecondary}"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
