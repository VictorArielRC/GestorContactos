<Window x:Class="GestionaContactos.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Contactos" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="FiltroNombre" Width="200" Margin="0,0,10,0" Text="Nombre o Apellido"/>
            <TextBox x:Name="FiltroRut" Width="150" Margin="0,0,10,0" Text="RUT"/>
            <Button Content="Buscar" Width="80" Click="Buscar_Click"/>
        </StackPanel>

        <!-- Lista de contactos -->
        <DataGrid x:Name="GridContactos" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="RUT" Binding="{Binding Rut}" Width="120"/>
                <DataGridTextColumn Header="Nombres" Binding="{Binding Nombres}" Width="150"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="120"/>
                <DataGridTextColumn Header="Ciudad" Binding="{Binding Direccion.Ciudad}" Width="120"/>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones CRUD -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Crear" Width="80" Margin="0,0,10,0" Click="Crear_Click"/>
            <Button Content="Actualizar" Width="80" Margin="0,0,10,0" Click="Actualizar_Click"/>
            <Button Content="Eliminar" Width="80" Click="Eliminar_Click"/>
        </StackPanel>
    </Grid>
</Window>
